<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.makeful" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/mf_icon_final"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <application
            android:icon="@drawable/mf_icon_final"
            android:label="@string/makeful" />

        <activity
            android:name=".InstructionActivity"
            android:label="@string/title_activity_instruction"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.makeful.MainActivity" />
        </activity>
        <activity
            android:name=".ProjectListActivity"
            android:label="@string/title_activity_project_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.makeful.MainActivity" />
        </activity>
    </application>

</manifest>
